---
import MainLayout from '@/layouts/main-layout.astro';
import { getCollection } from 'astro:content';
import pages from '@/content/site/pages.json';

const posts = await getCollection('blog');
const currentDate = new Date();

const postsToShow = posts
  .filter(post => post.data.publishDate !== null)
  .filter(post => post.data.publishDate! <= currentDate)
  .sort((a, b) => b.data.publishDate!.getTime() - a.data.publishDate!.getTime());
---

<MainLayout title={pages.blogIndex.metaTitle} description={pages.blogIndex.metaDescription}>
  <div class="mx-auto max-w-4xl px-4 py-8">
    <section class="animate-section mb-12">
      <h1 class="text-foreground mb-4 text-4xl font-bold">{pages.blogIndex.heading}</h1>
      <p class="text-foreground-muted text-xl">{pages.blogIndex.intro}</p>
    </section>

    <div class="animate-section space-y-8">
      {
        postsToShow.map(post => (
          <article class="animate-content border-border border-b pb-8 last:border-b-0">
            <header class="mb-4">
              <h2 class="text-foreground mb-2 text-2xl font-semibold">
                <a href={`/blog/${post.data.slug}`} class="hover:text-secondary transition-colors">
                  {post.data.title}
                </a>
              </h2>

              <div class="text-foreground-muted mb-3 flex items-center">
                <time datetime={post.data.publishDate?.toISOString()}>
                  {post.data.publishDate?.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </time>
              </div>

              {post.data.description && <p class="text-foreground-muted mb-4">{post.data.description}</p>}

              {post.data.tags && post.data.tags.length > 0 && (
                <div class="flex flex-wrap gap-2">
                  {post.data.tags.map(tag => (
                    <span class="bg-muted text-foreground border-border rounded border px-2 py-1 text-xs font-medium">{tag}</span>
                  ))}
                </div>
              )}
            </header>
          </article>
        ))
      }
    </div>

    {
      posts.length === 0 && (
        <div class="py-12 text-center">
          <p class="text-foreground-muted">{pages.blogIndex.emptyState}</p>
        </div>
      )
    }
  </div>
</MainLayout>
