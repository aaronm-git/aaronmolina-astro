---
import MainLayout from '@/layouts/main-layout.astro';
import { getCollection, render } from 'astro:content';
import { createTechMap, objectToTechMap } from '@/utils/tech-lookup';
import { formatDate, toISODateString } from '@/utils/date-format';
import { FaArrowLeft } from '@/utils/icons';
import TagList from '@/components/ui/TagList.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  const technologies = await getCollection('technologies');
  const techMap = createTechMap(technologies);

  return posts.map(p => ({
    params: { post: p.data.slug },
    props: { post: p, techMapObj: Object.fromEntries(techMap) },
  }));
}

const { post, techMapObj } = Astro.props;
const { Content } = await render(post);
const techMap = objectToTechMap(techMapObj);
---

<MainLayout title={post.data.title} description={post.data.description}>
  <article class="mx-auto max-w-screen-md px-4 py-8">
    <!-- Post Header -->
    <header class="mb-8">
      <h1 class="text-foreground mb-4 text-4xl font-bold">
        {post.data.title}
      </h1>

      <div class="text-foreground-muted mb-6 flex items-center gap-4">
        {post.data.publishDate && (
          <time datetime={toISODateString(post.data.publishDate)}>
            {formatDate(post.data.publishDate, 'long')}
          </time>
        )}
        {
          post.data.updatedDate && post.data.publishDate && post.data.updatedDate.getTime() !== post.data.publishDate.getTime() && (
            <>
              <span>â€¢</span>
              <span>Updated {formatDate(post.data.updatedDate, 'long')}</span>
            </>
          )
        }
      </div>

      {post.data.description && <p class="text-foreground-muted mb-6 text-xl leading-relaxed">{post.data.description}</p>}
    </header>

    <!-- Post Content -->
    <div class="typography">
      <Content />
    </div>

    <!-- Post Footer -->
    <footer class="border-border mt-12 border-t pt-8">
      <div class="mb-6">
        <h2 class="text-foreground mb-4 text-2xl font-semibold">Tags</h2>
        {
          post.data.tags && post.data.tags.length > 0 && (
            <div class="mb-6">
              <TagList tags={post.data.tags} techMap={techMap} />
            </div>
          )
        }
      </div>
      <div class="flex items-center justify-between">
        <a href="/blog" class="text-secondary hover:text-secondary-hover group flex items-center gap-1 font-medium">
          <FaArrowLeft className="icon-sm transition-transform group-hover:-translate-x-1" />
          Back to Blog
        </a>
        <div class="text-foreground-muted text-sm">
          Last updated: {post.data.updatedDate ? formatDate(post.data.updatedDate, 'short') : post.data.publishDate ? formatDate(post.data.publishDate, 'short') : ''}
        </div>
      </div>
    </footer>
  </article>
</MainLayout>
