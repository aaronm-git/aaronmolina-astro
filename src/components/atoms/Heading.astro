---
import { cn } from '@/lib/cn';

type HeadingLevel = 1 | 2 | 3 | 4 | 5 | 6;
type HeadingSize = 'xs' | 'sm' | 'base' | 'lg' | 'xl' | '2xl' | '3xl' | '4xl' | '5xl' | 'hero';
type HeadingWeight = 'normal' | 'medium' | 'semibold' | 'bold' | 'black';
type HeadingAlign = 'left' | 'center' | 'right';

interface Props {
  /** Semantic heading level (h1-h6) */
  level?: HeadingLevel;
  /** Visual size (can differ from semantic level) */
  size?: HeadingSize;
  /** Font weight */
  weight?: HeadingWeight;
  /** Text alignment */
  align?: HeadingAlign;
  /** Gradient text effect */
  gradient?: boolean;
  /** Text wrap balance */
  balance?: boolean;
  /** Additional CSS classes */
  class?: string;
}

const {
  level = 2,
  size,
  weight = 'bold',
  align = 'left',
  gradient = false,
  balance = false,
  class: className = '',
} = Astro.props;

// Default size based on level if not specified
const defaultSizes: Record<HeadingLevel, HeadingSize> = {
  1: '4xl',
  2: '3xl',
  3: '2xl',
  4: 'xl',
  5: 'lg',
  6: 'base',
};

const effectiveSize = size || defaultSizes[level];

// Size classes
const sizeClasses: Record<HeadingSize, string> = {
  xs: 'text-sm',
  sm: 'text-base',
  base: 'text-lg',
  lg: 'text-xl md:text-2xl',
  xl: 'text-2xl md:text-3xl',
  '2xl': 'text-3xl md:text-4xl',
  '3xl': 'text-4xl md:text-5xl',
  '4xl': 'text-5xl md:text-6xl',
  '5xl': 'text-6xl md:text-7xl',
  hero: 'text-hero',
};

// Weight classes
const weightClasses: Record<HeadingWeight, string> = {
  normal: 'font-normal',
  medium: 'font-medium',
  semibold: 'font-semibold',
  bold: 'font-bold',
  black: 'font-black',
};

// Align classes
const alignClasses: Record<HeadingAlign, string> = {
  left: 'text-left',
  center: 'text-center',
  right: 'text-right',
};

const HeadingTag = `h${level}` as const;

const combinedClasses = cn(
  'text-foreground tracking-tight',
  sizeClasses[effectiveSize],
  weightClasses[weight],
  alignClasses[align],
  balance && 'text-balance',
  gradient && 'heading-gradient',
  className,
);
---

<HeadingTag class={combinedClasses}>
  <slot />
</HeadingTag>

<style>
  /* Hero size - Tactile Maximalism */
  .text-hero {
    font-size: clamp(2.5rem, 8vw, 6rem);
    line-height: 1.05;
    letter-spacing: -0.02em;
  }

  /* Gradient text */
  .heading-gradient {
    background: linear-gradient(135deg, var(--primary), var(--secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Text balance for better wrapping */
  .text-balance {
    text-wrap: balance;
  }
</style>
