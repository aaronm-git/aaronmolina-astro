---
/**
 * Hire Services - Main overview page
 * Showcases all hiring service offerings
 */
import MainLayout from '@/layouts/main-layout.astro';
import HeroSection from '@/components/organisms/sections/HeroSection.astro';
import ServicesSection from '@/components/organisms/sections/ServicesSection.astro';
import CTASection from '@/components/organisms/sections/CTASection.astro';

const serviceOfferings = [
  {
    icon: 'code',
    title: 'Jamstack Development',
    description: 'High-performance static and hybrid sites with Astro, Next.js, and modern frameworks',
    href: '/hire/jamstack',
  },
  {
    icon: 'react',
    title: 'React Developer',
    description: 'Expert React development with TypeScript, hooks, and modern patterns',
    href: '/hire/react-developer',
  },
  {
    icon: 'nextjs',
    title: 'Next.js Developer',
    description: 'Full-stack React with server components, API routes, and optimization',
    href: '/hire/nextjs-developer',
  },
  {
    icon: 'globe',
    title: 'Headless CMS',
    description: 'Sanity, Contentful, and custom CMS implementation and migration',
    href: '/hire/headless-cms',
  },
];

const title = 'Hire a Developer | Services & Expertise | Aaron Molina';
const description = 'Hire a senior developer for Jamstack, React, Next.js, and Headless CMS projects. 12+ years experience, remote US / Miami.';
---

<MainLayout title={title} description={description}>
  <HeroSection
    variant="split"
    headline="Let's Build Something Great"
    subheadline="Choose Your Expertise"
    description="I offer specialized services across multiple technologies. Select a service below to learn more about how I can help with your project."
    primaryCta={{
      label: 'Get in Touch',
      href: '/contact',
      icon: 'arrowRight',
    }}
    class="mb-16"
  />

  <ServicesSection
    title="My Services"
    subtitle="Pick the expertise that fits your needs"
    services={serviceOfferings}
    variant="grid"
    columns={2}
    class="animate-section mb-16 bg-muted/30 rounded-2xl"
  />

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
    {serviceOfferings.map((service) => (
      <a
        href={service.href}
        class="group relative p-6 rounded-xl border border-border hover:border-primary bg-card hover:bg-muted/50 transition-all duration-200"
      >
        <div class="flex items-start gap-4">
          <div class="flex-shrink-0">
            <div class="flex items-center justify-center h-12 w-12 rounded-lg bg-primary/10 group-hover:bg-primary/20 transition-colors">
              <span class="text-lg">→</span>
            </div>
          </div>
          <div class="flex-1">
            <h3 class="text-lg font-semibold text-foreground group-hover:text-primary transition-colors">
              {service.title}
            </h3>
            <p class="mt-2 text-sm text-foreground-muted">{service.description}</p>
            <div class="mt-4 flex items-center text-primary font-medium text-sm">
              Learn more
              <span class="ml-2 group-hover:translate-x-1 transition-transform">→</span>
            </div>
          </div>
        </div>
      </a>
    ))}
  </div>

  <CTASection
    title="Ready to Start Your Project?"
    description="Whether you need a new website, optimization, or scaling your team, I'm here to help."
    buttonLabel="Get in Touch"
    buttonHref="/contact"
    class="animate-section"
  />
</MainLayout>
