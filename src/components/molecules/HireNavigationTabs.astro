---
/**
 * HireNavigationTabs - Navigation tabs for hire specialization pages
 * Allows users to switch between different hire service offerings
 */

interface Tab {
  label: string;
  href: string;
}

interface Props {
  currentPath: string;
  class?: string;
}

const tabs: Tab[] = [
  { label: 'Jamstack', href: '/hire' },
  { label: 'React', href: '/hire/react-developer' },
  { label: 'Next.js', href: '/hire/nextjs-developer' },
  { label: 'Headless CMS', href: '/hire/headless-cms' },
];

const { currentPath, class: className } = Astro.props;
---

<div class={`flex flex-wrap gap-2 justify-center mb-12 ${className || ''}`}>
  {tabs.map((tab) => {
    const isActive = currentPath === tab.href;
    return (
      <a
        href={tab.href}
        class={`px-4 py-2 rounded-lg font-medium transition-all duration-200 ${
          isActive
            ? 'bg-primary text-white shadow-lg scale-105'
            : 'bg-muted text-foreground hover:bg-muted/80 hover:text-foreground'
        }`}
      >
        {tab.label}
      </a>
    );
  })}
</div>
