---
import MainLayout from '@/layouts/main-layout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(p => ({
    params: { post: p.data.slug },
    props: { post: p },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<MainLayout title={post.data.title} description={post.data.description}>
  <article class="mx-auto max-w-screen-md px-4 py-8">
    <!-- Post Header -->
    <header class="mb-8">
      <h1 class="text-foreground mb-4 text-4xl font-bold">
        {post.data.title}
      </h1>

      <div class="text-foreground-muted mb-6 flex items-center gap-4">
        <time datetime={post.data.publishDate?.toISOString()}>
          {
            post.data.publishDate?.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })
          }
        </time>
        {
          post.data.updatedDate && post.data.updatedDate.getTime() !== post.data.publishDate?.getTime() && (
            <>
              <span>•</span>
              <span>
                Updated{' '}
                {post.data.updatedDate.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </span>
            </>
          )
        }
      </div>

      {post.data.description && <p class="text-foreground-muted mb-6 text-xl leading-relaxed">{post.data.description}</p>}
    </header>

    <!-- Post Content -->
    <div class="typography">
      <Content />
    </div>

    <!-- Post Footer -->
    <footer class="border-border mt-12 border-t pt-8">
      <div class="mb-6">
        <h2 class="text-foreground mb-4 text-2xl font-semibold">Tags</h2>
        {
          post.data.tags && post.data.tags.length > 0 && (
            <div class="mb-6 flex flex-wrap gap-2">
              {post.data.tags.map(tag => (
                <span class="bg-muted text-secondary rounded-full px-3 py-1 text-sm">{tag}</span>
              ))}
            </div>
          )
        }
      </div>
      <div class="flex items-center justify-between">
        <a href="/blog" class="text-secondary hover:text-secondary-hover"> ← Back to Blog </a>
        <div class="text-foreground-muted text-sm">
          Last updated: {post.data.updatedDate?.toLocaleDateString() || post.data.publishDate?.toLocaleDateString()}
        </div>
      </div>
    </footer>
  </article>
</MainLayout>
