---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Let's Work Together",
  description = "I'm always interested in new opportunities and challenging projects. Whether you need a frontend developer, fullstack solution, or technical consultation, let's connect.",
} = Astro.props;
---

<section class="bg-primary-50 dark:bg-primary-800 border-primary-100 dark:border-primary-700 rounded-lg border p-8 text-center">
  <h2 class="text-primary-900 dark:text-primary-100 mb-4 text-3xl font-bold">{title}</h2>
  <p class="text-primary-700 dark:text-primary-300 mx-auto mb-6 max-w-2xl">
    {description}
  </p>
  <div class="flex justify-center">
    <a href="/contact" class="bg-primary-600 hover:bg-primary-700 dark:bg-primary-600 dark:hover:bg-primary-700 inline-flex items-center gap-2 rounded-lg px-6 py-3 font-medium text-white transition-colors">
      <span data-feather="mail"></span>
      Get In Touch
    </a>
  </div>
</section>
