---
import MainLayout from '@/layouts/main-layout.astro';

// You can set your Formspree endpoint here or use environment variables
// const FORMSPREE_ENDPOINT = import.meta.env.FORMSPREE_ENDPOINT || 'https://formspree.io/f/YOUR_FORM_ID';
const FORMSPREE_ENDPOINT = 'https://formspree.io/f/xanjrvre'; // Replace with your actual form ID
---

<MainLayout>
  <!-- Header -->
  <header class="mb-12 text-center">
    <h1 class="text-primary-900 dark:text-primary-100 mb-4 text-5xl font-bold">Get In Touch</h1>
    <p class="text-primary-700 dark:text-primary-300 mx-auto max-w-2xl text-lg">
      Ready to start your next project? I'd love to hear about your ideas and discuss how we can work together to bring them to life.
    </p>
  </header>

  <!-- Contact Form -->
  <div class="mb-16 grid gap-12 lg:grid-cols-2">
    <!-- Form -->
    <div class="border-primary-100 dark:border-primary-800 dark:bg-primary-900 rounded-lg border bg-white p-8 shadow-md">
      <h2 class="text-primary-900 dark:text-primary-100 mb-6 text-2xl font-bold">Send a Message</h2>

      <form id="contact-form" action={FORMSPREE_ENDPOINT} method="POST" class="space-y-6">
        <div class="grid gap-6 md:grid-cols-2">
          <div>
            <label for="name" class="text-primary-900 dark:text-primary-100 mb-2 block text-sm font-medium">Full Name</label>
            <input
              type="text"
              name="name"
              required
              class="border-primary-300 text-primary-900 dark:text-primary-100 focus:border-secondary-500 focus:ring-secondary-500 w-full rounded-md border bg-white px-3 py-2 focus:ring-2 focus:outline-none dark:border-gray-600 dark:bg-gray-800"
              placeholder="Your name"
            />
          </div>

          <div>
            <label for="email" class="text-primary-900 dark:text-primary-100 mb-2 block text-sm font-medium">Email Address</label>
            <input
              type="email"
              name="email"
              required
              class="border-primary-300 text-primary-900 dark:text-primary-100 focus:border-secondary-500 focus:ring-secondary-500 w-full rounded-md border bg-white px-3 py-2 focus:ring-2 focus:outline-none dark:border-gray-600 dark:bg-gray-800"
              placeholder="your@email.com"
            />
          </div>
        </div>

        <div>
          <label for="company" class="text-primary-900 dark:text-primary-100 mb-2 block text-sm font-medium">Company (Optional)</label>
          <input
            type="text"
            name="company"
            class="border-primary-300 text-primary-900 dark:text-primary-100 focus:border-secondary-500 focus:ring-secondary-500 w-full rounded-md border bg-white px-3 py-2 focus:ring-2 focus:outline-none dark:border-gray-600 dark:bg-gray-800"
            placeholder="Your company"
          />
        </div>

        <div>
          <label for="project-type" class="text-primary-900 dark:text-primary-100 mb-2 block text-sm font-medium">Project Type</label>
          <select
            name="project-type"
            class="border-primary-300 text-primary-900 dark:text-primary-100 focus:border-secondary-500 focus:ring-secondary-500 w-full rounded-md border bg-white px-3 py-2 focus:ring-2 focus:outline-none dark:border-gray-600 dark:bg-gray-800"
          >
            <option value="">Select a project type</option>
            <option value="frontend">Frontend Development</option>
            <option value="fullstack">Full-Stack Application</option>
            <option value="website">Website Development</option>
            <option value="consultation">Technical Consultation</option>
            <option value="optimization">Performance Optimization</option>
            <option value="other">Other</option>
          </select>
        </div>

        <div>
          <label for="budget" class="text-primary-900 dark:text-primary-100 mb-2 block text-sm font-medium">Budget Range (Optional)</label>
          <select
            name="budget"
            class="border-primary-300 text-primary-900 dark:text-primary-100 focus:border-secondary-500 focus:ring-secondary-500 w-full rounded-md border bg-white px-3 py-2 focus:ring-2 focus:outline-none dark:border-gray-600 dark:bg-gray-800"
          >
            <option value="">Select budget range</option>
            <option value="under-5k">Under $5,000</option>
            <option value="5k-15k">$5,000 - $15,000</option>
            <option value="15k-30k">$15,000 - $30,000</option>
            <option value="30k-plus">$30,000+</option>
            <option value="discuss">Let's discuss</option>
          </select>
        </div>

        <div>
          <label for="message" class="text-primary-900 dark:text-primary-100 mb-2 block text-sm font-medium">Project Details</label>
          <textarea
            name="message"
            rows="6"
            required
            class="border-primary-300 text-primary-900 dark:text-primary-100 focus:border-secondary-500 focus:ring-secondary-500 w-full rounded-md border bg-white px-3 py-2 focus:ring-2 focus:outline-none dark:border-gray-600 dark:bg-gray-800"
            placeholder="Tell me about your project, timeline, and any specific requirements..."></textarea>
        </div>

        <!-- Hidden fields for Formspree -->
        <input type="hidden" name="_subject" value="New Contact Form Submission" />
        <!-- <input type="hidden" name="_cc" value="hiram@aaronmolina.me" /> -->

        <button
          type="submit"
          class="bg-secondary-600 hover:bg-secondary-700 dark:bg-secondary-600 dark:hover:bg-secondary-700 focus:ring-secondary-500 flex w-full items-center justify-center gap-2 rounded-md px-4 py-3 font-medium text-white transition-colors focus:ring-2 focus:ring-offset-2 focus:outline-none disabled:cursor-not-allowed disabled:opacity-50"
        >
          <span>Send Message</span>
        </button>
      </form>
    </div>

    <!-- Contact Info -->
    <div class="space-y-8">
      <div class="border-primary-100 dark:border-primary-800 dark:bg-primary-900 rounded-lg border bg-white p-6 shadow-md">
        <h3 class="text-primary-900 dark:text-primary-100 mb-4 text-xl font-bold">Why Work With Me?</h3>
        <div class="space-y-4">
          <div class="flex items-start gap-3">
            <i data-feather="briefcase" class="text-secondary-600 dark:text-secondary-400 mt-1 h-5 w-5 flex-shrink-0"></i>
            <div>
              <h4 class="text-primary-900 dark:text-primary-100 font-medium">Experience</h4>
              <p class="text-primary-600 dark:text-primary-400 text-sm">I've been in the industry for over 10 years and have worked with some of the biggest brands in the world</p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <i data-feather="zap" class="text-secondary-600 dark:text-secondary-400 mt-1 h-5 w-5 flex-shrink-0"></i>
            <div>
              <h4 class="text-primary-900 dark:text-primary-100 font-medium">Fast & Efficient</h4>
              <p class="text-primary-600 dark:text-primary-400 text-sm">Quick turnaround times without compromising quality</p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <i data-feather="users" class="text-secondary-600 dark:text-secondary-400 mt-1 h-5 w-5 flex-shrink-0"></i>
            <div>
              <h4 class="text-primary-900 dark:text-primary-100 font-medium">Collaborative Approach</h4>
              <p class="text-primary-600 dark:text-primary-400 text-sm">Regular communication and feedback throughout the project</p>
            </div>
          </div>
          <div class="flex items-start gap-3">
            <i data-feather="shield" class="text-secondary-600 dark:text-secondary-400 mt-1 h-5 w-5 flex-shrink-0"></i>
            <div>
              <h4 class="text-primary-900 dark:text-primary-100 font-medium">Quality Assurance</h4>
              <p class="text-primary-600 dark:text-primary-400 text-sm">Clean, tested code with focus on performance and accessibility</p>
            </div>
          </div>
        </div>
      </div>

      <div class="border-primary-100 dark:border-primary-800 dark:bg-primary-900 rounded-lg border bg-white p-6 shadow-md">
        <h3 class="text-primary-900 dark:text-primary-100 mb-4 text-xl font-bold">Response Time</h3>
        <div class="space-y-3">
          <div class="flex items-center gap-2">
            <span data-feather="clock" class="text-secondary-600 dark:text-secondary-400 h-4 w-4"></span>
            <span class="text-primary-700 dark:text-primary-300 text-sm">I typically respond within 24 hours</span>
          </div>
          <div class="flex items-center gap-2">
            <span data-feather="calendar" class="text-secondary-600 dark:text-secondary-400 h-4 w-4"></span>
            <span class="text-primary-700 dark:text-primary-300 text-sm">Free consultation calls available</span>
          </div>
          <div class="flex items-center gap-2">
            <span data-feather="globe" class="text-secondary-600 dark:text-secondary-400 h-4 w-4"></span>
            <span class="text-primary-700 dark:text-primary-300 text-sm">Available for remote projects worldwide</span>
          </div>
        </div>
      </div>

      <div class="bg-secondary-50 dark:bg-secondary-900 border-secondary-200 dark:border-secondary-700 rounded-lg border p-6">
        <h3 class="text-primary-900 dark:text-secondary-50 mb-3 text-lg font-bold">Ready to Start?</h3>
        <p class="text-primary-700 dark:text-secondary-50 mb-4 text-sm">Looking for something specific? Check out my recent work and technical expertise.</p>
        <div class="flex gap-3">
          <a
            href="/projects"
            class="text-secondary-600 dark:text-secondary-200 hover:text-secondary-800 dark:hover:text-secondary-500 border-secondary-600 dark:border-secondary-200 dark:hover:border-secondary-500 flex items-center gap-1 rounded-lg border px-4 py-2 text-sm font-medium transition-colors"
          >
            <span data-feather="briefcase" class="h-4 w-4"></span>
            View Projects
          </a>
          <a
            href="/experience"
            class="text-secondary-600 dark:text-secondary-200 hover:text-secondary-800 dark:hover:text-secondary-500 border-secondary-600 dark:border-secondary-200 dark:hover:border-secondary-500 flex items-center gap-1 rounded-lg border px-4 py-2 text-sm font-medium transition-colors"
          >
            <span data-feather="user" class="h-4 w-4"></span>
            My Experience
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Social Media Section -->
  <section class="bg-primary-50 dark:bg-primary-800 border-primary-100 dark:border-primary-700 rounded-lg border p-8 text-center">
    <h2 class="text-primary-900 dark:text-primary-100 mb-4 text-3xl font-bold">Connect With Me</h2>
    <p class="text-primary-700 dark:text-primary-300 mx-auto mb-6 max-w-2xl">Prefer social media? Find me on these platforms or check out my latest projects and articles.</p>
    <div class="flex flex-wrap justify-center gap-6">
      <a
        href="https://github.com/aaronm-git"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 rounded-lg bg-gray-800 px-6 py-3 font-medium text-white transition-colors hover:bg-gray-900 dark:bg-gray-800 dark:hover:bg-gray-600"
      >
        <span data-feather="github"></span>
        GitHub
      </a>
      <a
        href="https://www.linkedin.com/in/aaronmolinag"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 rounded-lg bg-blue-600 px-6 py-3 font-medium text-white transition-colors hover:bg-blue-700 dark:bg-blue-700 dark:hover:bg-blue-600"
      >
        <span data-feather="linkedin"></span>
        LinkedIn
      </a>
      <a
        href="https://www.instagram.com/chillsloth09"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 rounded-lg bg-pink-600 px-6 py-3 font-medium text-white transition-colors hover:bg-pink-700 dark:bg-pink-700 dark:hover:bg-pink-600"
      >
        <span data-feather="instagram"></span>
        Instagram
      </a>
    </div>
  </section>
</MainLayout>
