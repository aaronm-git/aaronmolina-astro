---
import MainLayout from '@/layouts/main-layout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(p => ({
    params: { post: p.data.slug },
    props: { post: p },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<MainLayout title={post.data.title} description={post.data.description}>
  <article class="mx-auto max-w-4xl px-4 py-8">
    <!-- Post Header -->
    <header class="mb-8">
      <h1 class="text-primary-900 mb-4 text-4xl font-bold">
        {post.data.title}
      </h1>

      <div class="text-primary-600 mb-4 flex items-center">
        <time datetime={post.data.date.toISOString()}>
          {
            post.data.date.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })
          }
        </time>
      </div>

      {post.data.description && <p class="text-primary-700 mb-6 text-xl">{post.data.description}</p>}

      {
        post.data.tags && post.data.tags.length > 0 && (
          <div class="mb-6 flex flex-wrap gap-2">
            {post.data.tags.map(tag => (
              <span class="bg-secondary-100 text-secondary-800 rounded-full px-3 py-1 text-sm">{tag}</span>
            ))}
          </div>
        )
      }
    </header>

    <!-- Post Content -->
    <div class="typography max-w-none">
      <Content />
    </div>

    <!-- Post Footer -->
    <footer class="border-primary-200 mt-12 border-t pt-8">
      <div class="flex items-center justify-between">
        <a href="/blog" class="text-secondary-600 hover:text-secondary-800"> ‚Üê Back to Blog </a>
        <div class="text-primary-500 text-sm">
          Last updated: {post.data.date.toLocaleDateString()}
        </div>
      </div>
    </footer>
  </article>
</MainLayout>
