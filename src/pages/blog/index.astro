---
import MainLayout from "@/layouts/main-layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
// Sort posts by date (newest first)
const sortedPosts = posts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<MainLayout title="Blog - Aaron Molina" description="Thoughts on modern web development, performance optimization, and senior-level technical decisions.">
	<div class="max-w-4xl mx-auto px-4 py-8">
		<header class="mb-12">
			<h1 class="text-4xl font-bold text-primary-900 mb-4">Blog</h1>
			<p class="text-xl text-primary-700">
				Thoughts on modern web development, performance optimization, and senior-level technical decisions.
			</p>
		</header>

		<div class="space-y-8">
			{sortedPosts.map((post) => (
				<article class="border-b border-primary-200 pb-8 last:border-b-0">
					<header class="mb-4">
						<h2 class="text-2xl font-semibold text-primary-900 mb-2">
							<a href={`/blog/${post.data.slug}`} class="hover:text-secondary-600 transition-colors">
								{post.data.title}
							</a>
						</h2>
						
						<div class="flex items-center text-primary-600 mb-3">
							<time datetime={post.data.date.toISOString()}>
								{post.data.date.toLocaleDateString('en-US', {
									year: 'numeric',
									month: 'long',
									day: 'numeric'
								})}
							</time>
						</div>
						
						{post.data.description && (
							<p class="text-primary-700 mb-4">
								{post.data.description}
							</p>
						)}
						
						{post.data.tags && post.data.tags.length > 0 && (
							<div class="flex flex-wrap gap-2">
								{post.data.tags.map((tag) => (
									<span class="px-2 py-1 bg-primary-100 text-primary-700 text-sm rounded">
										{tag}
									</span>
								))}
							</div>
						)}
					</header>
				</article>
			))}
		</div>

		{posts.length === 0 && (
			<div class="text-center py-12">
				<p class="text-primary-600">No blog posts yet. Check back soon!</p>
			</div>
		)}
	</div>
</MainLayout>
