---
import Button from '@/components/ui/Button.astro';
import ctaContent from '@/content/site/cta.json';

interface Props {
  title?: string;
  description?: string;
  buttonLabel?: string;
  buttonHref?: string;
}

const {
  title = ctaContent.title,
  description = ctaContent.description,
  buttonLabel = ctaContent.buttonLabel,
  buttonHref = ctaContent.buttonHref,
} = Astro.props;
---

<section class="tactile-cta p-8 text-center">
  <h2 class="text-on-primary mb-4 text-3xl font-bold">{title}</h2>
  <p class="text-on-primary mx-auto mb-6 max-w-2xl">
    {description}
  </p>
  <div class="flex justify-center">
    <Button href={buttonHref} variant="secondary" icon="contact" size="lg">
      {buttonLabel}
    </Button>
  </div>
</section>
