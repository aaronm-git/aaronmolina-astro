---
import MainLayout from '@/layouts/main-layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
// Sort posts by date (newest first)
const sortedPosts = posts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<MainLayout title="Blog - Aaron Molina" description="Thoughts on modern web development, performance optimization, and senior-level technical decisions.">
  <div class="mx-auto max-w-4xl px-4 py-8">
    <header class="mb-12">
      <h1 class="text-primary-900 mb-4 text-4xl font-bold">Blog</h1>
      <p class="text-primary-700 text-xl">Thoughts on modern web development, performance optimization, and senior-level technical decisions.</p>
    </header>

    <div class="space-y-8">
      {
        sortedPosts.map(post => (
          <article class="border-primary-200 border-b pb-8 last:border-b-0">
            <header class="mb-4">
              <h2 class="text-primary-900 mb-2 text-2xl font-semibold">
                <a href={`/blog/${post.data.slug}`} class="hover:text-secondary-600 transition-colors">
                  {post.data.title}
                </a>
              </h2>

              <div class="text-primary-600 mb-3 flex items-center">
                <time datetime={post.data.date.toISOString()}>
                  {post.data.date.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </time>
              </div>

              {post.data.description && <p class="text-primary-700 mb-4">{post.data.description}</p>}

              {post.data.tags && post.data.tags.length > 0 && (
                <div class="flex flex-wrap gap-2">
                  {post.data.tags.map(tag => (
                    <span class="bg-primary-100 text-primary-700 rounded px-2 py-1 text-sm">{tag}</span>
                  ))}
                </div>
              )}
            </header>
          </article>
        ))
      }
    </div>

    {
      posts.length === 0 && (
        <div class="py-12 text-center">
          <p class="text-primary-600">No blog posts yet. Check back soon!</p>
        </div>
      )
    }
  </div>
</MainLayout>
