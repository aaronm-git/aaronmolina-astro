---
import '@/styles/global.css';
import Header from '@/components/layout/header.astro';
import Footer from '@/components/layout/footer.astro';
import settings from '@/content/site/settings.json';

import favicon from '@/favicon_io/android-chrome-512x512.png';

export interface Props {
  title?: string;
  description?: string;
}

const { title = settings.siteTitle, description = settings.siteDescription } = Astro.props;
---

<html lang="en" class="js">
  <head>
    <!-- Meta Tags -->
    <!-- General -->
    <meta charset="utf-8" />
    <link rel="icon" type="image/png" href={favicon.src} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    {settings.keywords?.length ? <meta name="keywords" content={settings.keywords.join(', ')} /> : null}

    <!-- Umami Analytics -->
    {
      settings.analytics?.umamiScriptSrc && settings.analytics?.umamiWebsiteId ? (
        <script is:inline defer src={settings.analytics.umamiScriptSrc} data-website-id={settings.analytics.umamiWebsiteId}></script>
      ) : null
    }

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <!-- <meta property="og:image" content={siteConfig.image} /> -->
    <meta property="og:url" content={settings.siteUrl} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <!-- <meta property="twitter:image" content={siteConfig.image} /> -->

    <!-- Theme -->
    <script is:inline>
      (function () {
        const savedTheme = localStorage.getItem('theme') || 'system';
        let themeToApply;

        if (savedTheme === 'system') {
          themeToApply = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        } else {
          themeToApply = savedTheme;
        }

        document.documentElement.setAttribute('data-theme', themeToApply);
      })();
    </script>

    <!-- Title -->
    <title>{title}</title>
  </head>
  <!-- Body -->
  <body class="bg-background text-foreground pt-13 antialiased transition-colors duration-200">
    <Header />
    <main class="mx-auto max-w-6xl px-4 py-8">
      <slot />
    </main>
    <Footer />

    <!-- GSAP Animations -->
    <script>
      import { AnimationUtils } from '@/scripts/animations';

      // Initialize animations when DOM is ready
      document.addEventListener('DOMContentLoaded', () => {
        AnimationUtils.initializeAll();
      });

      // Also try on window load as a fallback for hash scrolling
      window.addEventListener('load', () => {
        if (window.location.hash) {
          AnimationUtils.initSmoothScrollOnPageLoad();
        }
      });
    </script>
  </body>
</html>
